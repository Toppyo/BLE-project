<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_layout_settings_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30dp"
            android:background="@color/colorSkyBlue"
            android:text="@string/settings_title"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_settings_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_settings_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLE"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/btn_settings_scan"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="SCAN"
            android:background="@color/colorSkyBlue"/>
        <Button
            android:id="@+id/btn_settings_reset"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="RESET"
            android:background="@color/colorSkyBlue"/>
        <Button
            android:id="@+id/btn_settings_save"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="SAVE"
            android:background="@color/colorSkyBlue"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_settings_uuid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_settings_operation"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="@string/settings_uuid"
            android:textSize="20sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="     "
            android:textSize="20sp"
            android:background="@drawable/textborder"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listview_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_layout_settings_uuid"
        android:layout_marginTop="10dp">
    </ListView>
</RelativeLayout>
